<!doctype html>
<html lang="en">
  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>

    <title>Crud</title>
  </head>
  <body>
      
       <div class="container">
          <a href="/create" class="btn btn-outline-primary mt-4"></a>
          <table class="table table-bordered table-striped text-center mt4">
              <thead>
                  <tr class="bg-primary text-white">
                      <th>ID</th>
                      <th>Usuario</th>
                      <th>Correo Electr√≥nico</th>
                      <th>Acciones</th>
                  </tr>
              </thead>
              <tbody>
                  <% results.forEach((users)=> { %>

                  <tr>
                      <td><%= users.id %></td>
                      <td><%= users.user %></td>
                      <td><%= users.correo %></td>
                      <td>
                          <a href="/edit/<%= users.id %>" class="btn btn-outline-info">Editar</a>
                          <a href="/delete/<%= users.id %>" class="btn btn-outline-danger">Borrar</a>
                      </td>
                  </tr>
                  <% }) %>
              </tbody>
          </table>
      </div>






    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>